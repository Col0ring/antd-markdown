{
  "name": "antd-markdown",
  "description": "a markdown viewer",
  "version": "0.1.1",
  "private": true,
  "author": {
    "name": "Col0ring",
    "email": "xylcol0ring@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Col0ring/antd-markdown"
  },
  "main": "./build/main.js",
  "dependencies": {
    "electron-store": "^6.0.1"
  },
  "devDependencies": {
    "ahooks": "^2.8.1",
    "axios": "^0.21.0",
    "classnames": "^2.2.6",
    "normalize.css": "^8.0.1",
    "qiniu": "^7.3.2",
    "react-simplemde-editor": "^4.1.3",
    "use-immer": "^0.4.1",
    "uuid": "^8.3.1",
    "@babel/preset-typescript": "^7.12.1",
    "@craco/craco": "^5.6.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.17",
    "antd": "^4.8.0",
    "craco-less": "^1.17.0",
    "cross-env": "^7.0.2",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "electron-is-dev": "^1.2.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^4.0.5",
    "wait-on": "^5.0.1"
  },
  "scripts": {
    "start:render": "cross-env BROWSER=none craco start",
    "start:watch-main": "cross-env NODE_ENV=development ts-node --project ./config/tsconfig.json ./config/start.ts",
    "start:main": "wait-on http://localhost:3000 && nodemon --watch ./build --exec electron .",
    "prestart": "rimraf ./build",
    "start": "npm-run-all --parallel start:*",
    "build:render": "craco build",
    "build:main": "cross-env NODE_ENV=productment ts-node --project ./config/tsconfig.json ./config/start.ts",
    "build": "npm-run-all build:*",
    "test": "craco test",
    "redist": "npm run build",
    "dist": "electron-builder",
    "prepack": "npm run build",
    "pack": "electron-builder --dir",
    "package-all": "npm run build && electron-builder build -mwl",
    "package-mac": "npm run  build && electron-builder build --mac",
    "package-linux": "npm run  build && electron-builder build --linux",
    "package-win": "npm run  build && electron-builder build --win --x64",
    "release": "electron-builder  build -mwl",
    "prerelease": "npm run build"
  },
  "homepage": "./",
  "build": {
    "appId": "antd-markdown",
    "productName": "antd-markdown",
    "copyright": "Copyright Â© 2020 ${author}",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "publish": [
      "github"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "assets/dmgBgc.png",
      "icon": "assets/icon.icns",
      "contents": [
        {
          "x": 200,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 0,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 400,
        "height": 300
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}",
      "publisherName": "Col0ring"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
