{
  "name": "ts-react-electron-template",
  "version": "0.1.0",
  "private": true,
  "main": "./build/main.js",
  "dependencies": {},
  "devDependencies": {
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "electron-is-dev": "^1.2.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/webpack": "^4.41.17",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "~3.7.2",
    "wait-on": "^5.0.1"
  },
  "scripts": {
    "start:render": "cross-env BROWSER=none react-scripts start",
    "watch:main": "cross-env NODE_ENV=development ts-node --project ./config/tsconfig.json ./config/start.ts",
    "prestart:main": "ts-node --project ./config/tsconfig.json ./config/start-dev.ts",
    "start:main": "concurrently \"npm run watch:main\" \"electron .\"",
    "start": "concurrently \"npm run start:render\" \"wait-on http://localhost:3000 && npm run start:main\"",
    "build:render": "react-scripts build",
    "build:main": "cross-env NODE_ENV=productment ts-node --project ./config/tsconfig.json ./config/start.ts",
    "build": "npm run build:render && npm run build:main",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "prepack": "npm run build"
  },
  "homepage": "./",
  "build": {
    "appId": "testId",
    "productName": "testName",
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
